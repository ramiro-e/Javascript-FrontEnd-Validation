<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head'); %>
<body>
    <main>
        <div class="box largebox h2mod">
            <h2>Ingresa tus datos:</h2>
            <% if(errors.length){%>
                <div class="input-error">
                    <ul class="list-unstyled">
                        <% errors.forEach(error => { %>
                            <li class="error-msg"><%= error.msg %></li>
                        <%});%>
                    </ul>
                </div>
            <%}%>   
            <form action="/users/register" method="POST" id="formulario">
                <div class="left-align">

                    <div class="doublebox">
                        <div class="leftbox">
                            <div class="input-field">
                                <label>Nombre</label>
                                <input type="text" id="nombre" name="nombre" class="input-neutral">
                                <small id="nombre" class="error-msg hide-error-msg">error</small>
                            </div>
                                   
                            <div class="input-field">
                                <label>Apellido</label>
                                <input type="text" id="apellido" name="apellido" class="input-neutral">
                                <small id="apellido" class="error-msg hide-error-msg">error</small>
                            </div>
        
                            <div>
                                <label for="">Fecha de nacimiento</label>
                                <div>
                                    
                                    <!-- <label for="dia">Dia</label> -->
                                    <select name="dia" id="dia" class="input-date">
                                        <option value="">Dia</option>
                                    </select>
                                
                                    <!-- <label for="mes">Mes</label> -->
                                    <select name="mes" id="mes" class="input-date">
                                        <option value="">Mes</option>
                                    </select> 
                            
                                    <!-- <label for="anio">Año</label> -->
                                    <select name="año" id="año" class="input-date">
                                        <option value="">Año</option>
                                    </select>

                                    <input type="hidden" name="fecha" id="fecha" >
                                    
                                </div>
                                <small id="date" class="error-msg hide-error-msg">error</small>
                            </div>
                        </div>
                        <div class="rightbox">

                            <div class="input-field">
                                <label>Email</label>
                                <input type="email" id="email" name="email" class="input-neutral">
                                <small  id="email" class="error-msg hide-error-msg">error</small>
                            </div>
                            
                            <div class="input-field">
                                <label>Contraseña</label>
                                <input type="password" id="contraseña" name="contraseña" class="input-neutral">
                                <small id="contraseña" class="error-msg hide-error-msg">error</small>
                            </div>
        
                            <div class="input-field">
                                <label>Repetir Contraseña</label>
                                <input type="password" id="repetirContraseña" name="repetirContraseña" class="input-neutral">
                                <small id="repetirContraseña" class="error-msg hide-error-msg">error</small>
                            </div>

                        </div>
                    </div>                   
                </div>
                <div>
                    <input type="checkbox" name="recordarme" id="aceptarTyC"><label>Acepto los terminos y condiciones</label> <br>
                    <small id="aceptarTyC" class="error-msg hide-error-msg">error message</small>    
                </div>
                <div class="center-align"><button type="submit" value="Enviar" class="button">Registrarme</button></div>
                <div class="link">
                    <a href="/users/login">Ingresar</a>
                </div>
            </form>
        </div>
    </main>
    <script src="/javascripts/register.js" type="text/javascript"></script>
</body>
</html>
